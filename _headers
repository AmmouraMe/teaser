# Immutable assets (Vite content-hashed files) — cache forever
/_app/immutable/*
  Cache-Control: public, max-age=31536000, immutable

# HTML pages — never cache, always revalidate
/*.html
  Cache-Control: no-cache, no-store, must-revalidate

# Root page and all routes (Cloudflare Pages serves HTML without .html extension)
/*
  X-Content-Type-Options: nosniff

# API/dynamic routes — no caching
/auth/*
  Cache-Control: no-store
/admin/*
  Cache-Control: no-store
